<h2>Posts</h2>
<ul>
  {{#each posts as |post|}}
    <li
      data-user-id="{{post.user_id}}"
      style="list-style: none;
      margin-bottom: 10px;
      background-color: #fff;
      border-radius: 5px;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);"
    >
      <div class="list-header">
        <h3
          style="display:inline-block;
          margin: 0;"
        >{{post.title}}</h3>
        <h4
          style="display:inline-block;
          margin: 0;"
        >Posted by: {{post.user.username}}</h4>
      </div>
      <p
        style="margin: 0;
        padding: 10px;"
      >{{post.content}}</p>
    </li>
    <h3>Comments:</h3>
    <div class="comments-section">
      {{#each post.comments as |comment|}}
      <li>
        <h3
          style="display:inline-block;
          margin: 0;"
        >{{comment.user.username}}</h3>
        <p>{{comment.comment_text}}</p>
      </li>
      {{/each}}
    </div>
    <form class="add-comment-form">
      <input
        id="comment"
        type="text"
        name="comment_text"
        placeholder="Add a comment..."
        style="width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #d00909;"
      />
     
      <input
        id="post-id"
        type="hidden"
        name="user_id"
        value="{{post.user_id}}"
      />
      <button id="add-comment">Add Comment</button>

  {{/each}}
</ul>

<script src="/js/addComment.js"></script>